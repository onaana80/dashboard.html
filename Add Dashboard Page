<script>
    // --- SHARED STATE MANAGER ---
    function loadState() {
        const userHoldings = JSON.parse(localStorage.getItem('userHoldings')) || {};
        const promoterBalance = localStorage.getItem('userPromoterBalance') || "0.00";
        const ownerIncome = localStorage.getItem('userOwnerIncome') || "0.00";

        // Update UI
        document.getElementById('vault-count').innerText = Object.values(userHoldings).length;
        document.getElementById('service-balance').innerText = `$${promoterBalance}`;
        document.getElementById('owner-balance').innerText = `$${ownerIncome}`;
    }
    window.onload = loadState;
</script>
